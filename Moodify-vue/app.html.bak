              const disgustIntensity = (d - 0.5) * 2;
              r += (disgustColor[0] - 255) * disgustIntensity;
              g += (disgustColor[1] - 255) * disgustIntensity;
              b += (disgustColor[2] - 255) * disgustIntensity;
